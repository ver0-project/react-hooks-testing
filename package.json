{
	"name": "@ver0/react-hooks-testing",
	"version": "0.0.0",
	"description": "Test your react hooks with ease!",
	"keywords": [
		"react",
		"hooks",
		"testing",
		"unit",
		"ssr"
	],
	"repository": {
		"type": "git",
