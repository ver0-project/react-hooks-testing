{
	"name": "@ver0/react-hooks-testing",
	"version": "1.0.0",
	"description": "Test your react hooks with ease!",
	"keywords": [
		"react",
		"hooks",
		"testing",
		"unit",
		"ssr"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/ver0-project/react-hooks-testing"
	},
	"bugs": {
		"url": "https://github.com/ver0-project/react-hooks-testing/issues"
	},
	"publishConfig": {
		"access": "public"
	},
	"license": "MIT",
	"author": "Anton Zinovyev <xog3@yandex.ru>",
	"engines": {
		"node": ">=18"
	},
	"type": "module",
	"files": [
		"dist"
	],
	"main": "dist/index.js",
	"types": "dist/index.d.ts",
	"scripts": {
		"postinstall": "husky",
		"build": "yarn build:clean && yarn tsc -p tsconfig.build.json",
		"build:clean": "rimraf dist",
		"lint": "eslint",
		"lint:fix": "eslint --fix",
		"test": "vitest --run",
		"test:coverage": "vitest --run --coverage"
	},
	"packageManager": "yarn@4.6.0",
	"devDependencies": {
		"@commitlint/cli": "^19.8.1",
		"@commitlint/config-conventional": "^19.8.1",
		"@types/react": "^19.1.6",
		"@types/react-dom": "^19.1.5",
		"@ver0/eslint-config": "^1.1.4",
		"@ver0/eslint-formatter-gha": "^1.0.1",
		"@vitest/coverage-v8": "^3.2.1",
		"eslint": "^9.28.0",
		"husky": "^9.1.7",
		"jsdom": "^26.1.0",
		"lint-staged": "^16.1.0",
		"pinst": "^3.0.0",
		"react": "^19.1.0",
		"react-dom": "^19.1.0",
		"rimraf": "^6.0.1",
		"semantic-release": "^24.2.5",
		"typescript": "^5.8.3",
		"vitest": "^3.2.1"
	},
	"peerDependencies": {
		"react": "^19.1.0",
		"react-dom": "^19.1.0"
	},
	"peerDependenciesMeta": {
		"react-dom": {
			"optional": true
		}
	}
